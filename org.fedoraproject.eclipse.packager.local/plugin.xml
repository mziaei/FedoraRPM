<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.fedoraproject.eclipse.packager.local.localproject">
          <or>
              <!-- Filter on persistent property only . -->
              <reference
                  definitionId="org.fedoraproject.eclipse.packager.local.persistentProperty">
              </reference>
          </or>
      </definition>
      <definition
            id="org.fedoraproject.eclipse.packager.local.persistentProperty">
          <iterate
               ifEmpty="false">
            <or>
               <adapt
                     type="org.eclipse.core.resources.IProject">
                  <test
                        args="org.fedoraproject.eclipse.packager.local.localproject"
                        property="org.eclipse.core.resources.persistentProperty">
                  </test>
               </adapt>
               <adapt
                     type="org.eclipse.core.resources.IResource">
                  <test
                        args="org.fedoraproject.eclipse.packager.local.localproject"
                        property="org.eclipse.core.resources.persistentProperty">
                  </test>
               </adapt>
           </or>
         </iterate>
      </definition>
   </extension>

   <extension
         point="org.eclipse.ui.newWizards">
		<category 
			id="org.fedoraproject.eclipse.packager.local.category.wizards" 
			name="%LocalFedoraPackagerWizardName">
		</category>
		<wizard 
			category="org.fedoraproject.eclipse.packager.local.category.wizards" 
			class="org.fedoraproject.eclipse.packager.local.internal.ui.LocalFedoraPackagerProjectWizard" 
			icon="icons/fedora16x16.png" id="org.fedoraproject.eclipse.packager.local.newprojectwizard" 
			name="%FedoraGitWizardCommandName">
		</wizard>
	</extension>
	
	<extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?before=additions">
         <menu
               icon="icons/fedora16x16.png"
               id="org.eclipse.fedoraproject.packager.main"
               label="%MenuProductName">
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.fedoraproject.packager.main?">
         <command
               commandId="org.fedoraproject.eclipse.packager.local.prepCommand"
               icon="icons/fedpkg1.png"
               label="%LocalFedoraPackagercommand.label.prep"
               mnemonic="%LocalFedoraPackagercommand.mnemonic.prep"
               style="push">
				<visibleWhen
                     checkEnabled="false">
                  <or>
                     <with
                           variable="activeMenuSelection">
                        <reference
                              definitionId="org.fedoraproject.eclipse.packager.local.localproject">
                        </reference>
                     </with>
                     <with
                           variable="activeMenuEditorInput">
                        <reference
                              definitionId="org.fedoraproject.eclipse.packager.local.localproject">
                        </reference>
                     </with>
                  </or>
               </visibleWhen>
         </command>
         <command
               commandId="org.fedoraproject.eclipse.packager.local.srpmCommand"
               icon="icons/fedpkg1.png"
               label="%LocalFedoraPackagercommand.label.srpm"
               mnemonic="%LocalFedoraPackagercommand.mnemonic.srpm"
               style="push">
               <visibleWhen
                     checkEnabled="false">
                  <or>
                     <with
                           variable="activeMenuSelection">
                        <reference
                              definitionId="org.fedoraproject.eclipse.packager.local.localproject">
                        </reference>
                     </with>
                     <with
                           variable="activeMenuEditorInput">
                        <reference
                              definitionId="org.fedoraproject.eclipse.packager.local.localproject">
                        </reference>
                     </with>
                  </or>
               </visibleWhen>
         </command>
         <command
               commandId="org.fedoraproject.eclipse.packager.local.BuildCommand"
               icon="icons/fedpkg1.png"
               label="%LocalFedoraPackagercommand.label.build"
               mnemonic="%LocalFedoraPackagercommand.mnemonic.build"
               style="push">
				<visibleWhen
                     checkEnabled="false">
                  <or>
                     <with
                           variable="activeMenuSelection">
                        <reference
                              definitionId="org.fedoraproject.eclipse.packager.local.localproject">
                        </reference>
                     </with>
                     <with
                           variable="activeMenuEditorInput">
                        <reference
                              definitionId="org.fedoraproject.eclipse.packager.local.localproject">
                        </reference>
                     </with>
                  </or>
               </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.fedoraproject.eclipse.packager.local.internal.handlers.PrepHandler"
            id="org.fedoraproject.eclipse.packager.local.prepCommand"
            name="%LocalFedoraPackagercommand.name.prep">
      </command>
      <command
            defaultHandler="org.fedoraproject.eclipse.packager.local.internal.handlers.SRPMBuildHandler"
            id="org.fedoraproject.eclipse.packager.local.srpmCommand"
            name="%LocalFedoraPackagercommand.name.srpm">
      </command>
      <command
            defaultHandler="org.fedoraproject.eclipse.packager.local.internal.handlers.LocalBuildHandler"
            id="org.fedoraproject.eclipse.packager.local.BuildCommand"
            name="%LocalFedoraPackagercommand.name.build">
      </command>
   </extension>
    
   <!-- Keyboard shortcut definitions, from fedora packager main rpm key bindings 
   		Should make sure there is no key binding conflict -->
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.fedoraproject.eclipse.packager.local.prepCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M3+F P">
      </key>
      <key
            commandId="org.fedoraproject.eclipse.packager.local.BuildCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M3+F L">
      </key>
      <key
            commandId="org.fedoraproject.eclipse.packager.local.srpmCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M3+F S">
      </key>
    </extension>
    
 <extension
       point="org.fedoraproject.eclipse.packager.projectRootProvider">
    <projectRoot
          class="org.fedoraproject.eclipse.packager.local.LocalFedoraPackagerProjectRoot">
    </projectRoot>
 </extension>

   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.fedoraproject.eclipse.packager.perspective">
         <actionSet
               id="org.fedoraproject.eclipse.packager.local.FedoraPackagerActionSet">
         </actionSet>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            description="Actions associated with Fedora Packager."
            id="org.fedoraproject.eclipse.packager.local.FedoraPackagerActionSet"
            label="Fedora Packager Action Set">
         <action
               class="org.fedoraproject.eclipse.packager.local.internal.action.PrepAction"
               icon="icons/fedpkg1.png"
               id="org.fedoraproject.eclipse.packager.local.FedoraPackagerConversionAction"
               label="Upgrade existing Fedora Packager projects"
               state="false"
               style="pulldown"
               toolbarPath="org.fedoraproject.eclipse.packager.local.FedoraPackagerActionSet/resource"
               tooltip="Prepare sources for local build.">
         </action>
         <menu
               id="org.fedoraproject.eclipse.packager.local.toolbarbuild"
               label="Build Menu">
         </menu>
      </actionSet>
   </extension>
</plugin>
